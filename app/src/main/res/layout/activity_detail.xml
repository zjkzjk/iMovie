<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.zzzzzzzjk.imovie.DetailActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    <TextView
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:background="@color/detail_title_bg"
        android:paddingLeft="20dp"
        android:textColor="@color/white"
        tools:text="Zzzzzzzjk"
        android:textSize="@dimen/detail_title_size"
        android:layout_height="100dp"
        android:id="@+id/detail_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">
        <ImageView
            android:paddingLeft="18dp"
            android:id="@+id/detail_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                tools:text="1979"
                android:id="@+id/detail_year"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:textSize="@dimen/detail_year_size"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/detail_vote"
                android:paddingLeft="10dp"
                tools:text="8.6"
                android:paddingTop="20dp"
                android:textSize="@dimen/detail_airticl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>



        <TextView
            android:id="@+id/detail_airticl"
            android:layout_width="match_parent"
            android:paddingTop="30dp"
            tools:text="zzzzzzzzjk"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="@dimen/detail_airticl"
            android:layout_height="match_parent" />
    </LinearLayout>
</ScrollView>

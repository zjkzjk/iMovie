<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zzzzzzzjk.imovie.DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detail_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_title_height"
            android:background="@color/detail_title_bg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/detail_padding_20"
            android:textColor="@color/white"
            android:textSize="@dimen/detail_title_size"
            tools:text="Zzzzzzzjk" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detail_padding_18"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/detail_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/detail_padding_18" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/detail_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/detail_padding_10"
                    android:paddingTop="@dimen/detail_padding_20"
                    android:textSize="@dimen/detail_year_size"
                    tools:text="1979" />

                <TextView
                    android:id="@+id/detail_vote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/detail_padding_10"
                    android:paddingTop="@dimen/detail_padding_20"
                    android:textSize="@dimen/detail_airticl"
                    tools:text="8.6" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/detail_airticl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/detail_padding_20"
            android:paddingRight="@dimen/detail_padding_20"
            android:paddingTop="@dimen/detail_padding_30"
            android:textSize="@dimen/detail_airticl"
            tools:text="zzzzzzzzjk" />
    </LinearLayout>
</ScrollView>

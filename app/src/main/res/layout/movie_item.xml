<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/border"
    android:padding="@dimen/border"
    app:cardCornerRadius="@dimen/border">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/classify_cycler_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/border"
            android:contentDescription="@null"
            android:src="@drawable/sample_2" />

        <TextView
            android:id="@+id/classify_ctxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#fff"
            android:gravity="center"
            android:padding="@dimen/img_text_padding"
            android:textColor="@color/balck"
            android:textSize="@dimen/img_text" />
    </RelativeLayout>
</android.support.v7.widget.CardView>